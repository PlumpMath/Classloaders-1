	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.2.xsd">
 		
 	<bean id="view" class="view.View">
		<property name = "eventBus" ref = "eventbus"/>
	</bean>
	
	<bean id="controller" class="controller.Controller">
		<constructor-arg ref = "view" />
		<constructor-arg ref = "eventbus" />
	</bean>
	
	<bean id="eventbus" class="events.EventBus">
		<property name = "observers" ref = "observersList"/>
	</bean>
	
	<util:list id = "observersList">
		<ref bean = "controller" />
	</util:list>
 		
